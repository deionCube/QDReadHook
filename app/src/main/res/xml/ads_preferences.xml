<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/ads_title">

        <SwitchPreferenceCompat
            app:key="isEnableRemoveBookshelfFloat"
            app:title="@string/sw_bookshelf_float" />

        <SwitchPreferenceCompat
            app:key="isEnableRemoveBookshelfBottomAd"
            app:title="@string/sw_bottom_ad" />

        <SwitchPreferenceCompat
            app:key="isEnableRemoveUpdate"
            app:title="@string/sw_remove_update" />

        <SwitchPreferenceCompat
            app:key="isEnableDisableAd"
            app:title="@string/sw_disable_ad" />


    </PreferenceCategory>

    <PreferenceCategory app:title="@string/ads_title_2">

        <MultiSelectListPreference
            app:entries="@array/option_list_data"
            app:entryValues="@array/option_list_data_key"
            app:key="optionListData"
            app:summary="@string/et_add_option_summary"
            app:title="@string/et_add_option" />

        <EditTextPreference
            app:key="AuthorListData"
            app:title="@string/et_add_author"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="BookNameListData"
            app:title="@string/et_add_book_name"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="BookTypeListData"
            app:title="@string/et_add_book_type"
            app:useSimpleSummaryProvider="true" />




    </PreferenceCategory>


</PreferenceScreen>