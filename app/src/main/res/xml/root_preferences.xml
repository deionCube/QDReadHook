<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/function">
        <SwitchPreferenceCompat
            android:key="hideIcon"
            android:title="隐藏桌面图标" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/other">
        <!--打开网页-->
        <Preference
            app:key="pref_app_source"
            app:title="@string/github_open_source_address">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/url" />
        </Preference>
    </PreferenceCategory>


</PreferenceScreen>